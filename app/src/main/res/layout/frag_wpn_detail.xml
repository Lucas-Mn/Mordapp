<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.FragWpnDetail"
    android:orientation="vertical"
    android:background="@color/colorMenuBackground">

    <TextView
        android:id="@+id/frag_wpn_detail_name"
        android:text="WEAPON NAME"
        android:textSize="25dp"
        android:textColor="@color/colorTextWpn"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/frag_wpn_detail_btn_alt"
            android:text="ALT"
            android:layout_toLeftOf="@id/frag_wpn_detail_btn_strike"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/frag_wpn_detail_btn_strike"
            android:src="@drawable/btn_toggle_strike_off"
            android:layout_toLeftOf="@+id/frag_wpn_detail_spacer_toggles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:id="@+id/frag_wpn_detail_spacer_toggles"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/frag_wpn_detail_btn_stab"
            android:src="@drawable/btn_toggle_stab_off"
            android:layout_toRightOf="@+id/frag_wpn_detail_spacer_toggles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/frag_wpn_detail_table_layout"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/thumbnail_tier_0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/thumbnail_tier_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/thumbnail_tier_2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/thumbnail_tier_3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/frag_wpn_detail_tbl_head_img_armour"
                android:src="@drawable/thumbnail_body_head"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_head_lbl_0"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_head_lbl_1"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_head_lbl_2"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_head_lbl_3"
                style="@style/TextViewDmg"
                />

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/frag_wpn_detail_tbl_body_img_armour"
                android:src="@drawable/thumbnail_body_chest"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_body_lbl_0"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_body_lbl_1"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_body_lbl_2"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_body_lbl_3"
                style="@style/TextViewDmg"
                />

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/frag_wpn_detail_tbl_leg_img_armour"
                android:src="@drawable/thumbnail_body_legs"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_leg_lbl_0"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_leg_lbl_1"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_leg_lbl_2"
                style="@style/TextViewDmg"
                />

            <frise.project.mordapp.view.custom.TextViewDmg
                android:id="@+id/frag_wpn_detail_tbl_leg_lbl_3"
                style="@style/TextViewDmg"
                />

            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </TableRow>
    </TableLayout>

    <FrameLayout
        android:id="@+id/frag_wpn_detail_lower_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>

</LinearLayout>

</ScrollView>